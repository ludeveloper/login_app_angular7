{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    // "module": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "@/*": [
        "app/*"
      ]
    }
    // ,
    // "exclude": [
    //   "node_modules",
    //   "src/main.aot.ts"
    // ]
  }
}